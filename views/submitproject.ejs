                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/logout">logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container mt-3">

        <form enctype="multipart/form-data" action="/submitproject" method="post" style="border: 2px solid black;
        width: 70%;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 70px;">
                    <input type="text" name="topic" id="headingInput" placeholder="mention your topic here" style="width: 80%;
            height: 40px;
            text-align: center;
            font-size: large;
            font-weight: bold;
            border-radius: 50px ;margin-top: 15px;">

                    <textarea name="brief" class="form-control" placeholder="explain briefly about your project"
                        id="bodyTextarea" style="height: 300px;
                width: 80%;
                margin-top: 30px;
                border-radius: 30px;
                padding-left: 10px;
                padding-top: 10px;
                text-align: center;
                font-size: large;"></textarea>

<input type="file" name="project" id="" style="margin-top: 15px;
background-color: antiquewhite;
border: 2px solid black;
border-radius: 25px;">
<label for="" style="font-size: smaller; margin-top: 15px;margin-bottom: 15px;">*file format only pdf</label>
                    
<button class="btn btn-primary" type="submit" style="margin-bottom: 15px;">submit</button>
        </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
    <script>
        const headingInput = document.getElementById('headingInput');
        const bodyTextarea = document.getElementById('bodyTextarea');
        const submitButton = document.getElementById('submitButton');
    
       
        function checkInputs() {
            const headingValue = headingInput.value.trim();
            const bodyValue = bodyTextarea.value.trim();
    
            if (headingValue !== '' && bodyValue !== '') {
                submitButton.disabled = false; 
            } else {
                submitButton.disabled = true; 
            }
        }
    
        
        headingInput.addEventListener('input', checkInputs);
        bodyTextarea.addEventListener('input', checkInputs);
    </script>
</body>
